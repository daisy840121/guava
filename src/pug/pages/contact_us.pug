extends ../layout/layout.pug

block view
    .breadcrumb-nav
        ol.breadcrumb
            li.breadcrumb-li 
                a(href="./index.html") 首頁
            li.breadcrumb-li.breadcrumb-li-active 聯絡我們
    .wrap
        .pl-wrap
            .contactus-title
                p.big-title CONTACT US
                p.subtitle-title.contactus-subtitle  聯絡我們
            .contactus-wrap
                form(action="").contactus-form#contactus-form
                    .contactus-txt 
                        p 歡迎您透過本信件表單詢問產品、售後服務等相關問題，也歡迎您寫下相關產品的使用心得與建議。您的鼓勵及回饋是我們成長的動力，所有的問題我們都會盡快回覆給您。
                    .contactus-form-item
                        span.col-12 
                            p.form-title 問題分類
                            select#contactus_type.form-select
                                option(disabled selected) 請選擇分類
                                option 運費問題
                    .contactus-form-item
                        span.col-lg-6.col-12.half-left 
                            .d-flex.align-items-center
                                p.form-title 姓名(必填)
                                    .form-check
                                        input.form-check-input#male(type="radio" name="sex")
                                        label.form-check-label(for="male") 先生
                                            span.radio-button
                                    .form-check
                                        label.form-check-label(for="female") 小姐
                                            span.radio-button
                            input.form-control(type="text" name="name" aria-label="name",required)
                        span.col-lg-6.col-12.half-right.form-move-pt 
                            p.form-title 聯絡電話
                            input.form-control(type="text" name="tel" aria-label="tel",required)
                    .contactus-form-item
                        span.col-lg-6.col-12.half-left 
                            p.form-title 行動電話
                            input.form-control(type="text" name="phone" aria-label="phone",required)
                        span.col-lg-6.col-12.half-right.form-move-pt 
                            p.form-title 電子信箱(必填)
                            input.form-control(type="text" name="email" aria-label="email",required)
                    .contactus-form-item
                        span.col-12 
                            p.form-title 需求說明(必填)
                            input.form-control(type="text" name="note" aria-label="phone",required)
                    .contactus-form-item.el-wrap
                        .pullee-wrap
                            input.pullee(type="range" value="0")
                            .pullee_success
                                img(src="../../assets/check-solid.svg" alt="")
                            .pullee_error 
                                img(src="../../assets/sync-solid.svg" alt="")
                            .pullee-txt 向右滑動解鎖
                        button.btn.dark-btn.join-submit#join-submit(data-bs-toggle="modal" data-bs-target="#alerts") 確認送出
                .contactus-map-wrap
                    include ../layout/contact/map.pug
                    .contactus-map-info-card
                        .contactus-map-info-inner   
                            .marker
                                img(src="../../assets/contact/line.png", alt="")
                            p.marker-txt hidaisy840121@gmail.com
                        .contactus-map-info-inner   
                            .marker
                                img(src="../../assets/contact/tel.png", alt="")
                            p.marker-txt 0902-155-898
                        .contactus-map-info-inner   
                            .marker
                                img(src="../../assets/contact/email.png", alt="")
                            p.marker-txt hidaisy840121
                        .contactus-map-info-inner   
                            .marker
                                img(src="../../assets/contact/time.png", alt="")
                            p.marker-txt Mon - Sat </br> 8:30 - 12:00 13:00 - 18:30
